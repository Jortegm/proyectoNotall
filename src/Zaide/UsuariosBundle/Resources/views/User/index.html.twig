{% extends '::plantillaAdminis.html.twig' %}


{% block body %}
    {{ parent() }}
    <body>

        <!--header end-->

        <!--sidebar start-->
        <!--sidebar end-->

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!--overview start-->
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-laptop"></i> Usuarios</h3>

                    </div>
                </div>
                <div>
                <a href="{{ path('usuarios_add') }}" class="btn btn-lg btn-success"><span class="fa fa-plus-circle"></span> Nuevo Usuario</a>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>ID USUARIO</th>
                            <th>NOMBRE </th>
                            <th>APELLIDOS</th>
                            <th>CORREO Electronico</th>
                            <th>TIPO</th>
                            <th>NIVEL</th>
                            <th>PAÍS</th>
                            <th>FECHA DE ALTA</th>
                            <th>FECHA DE ACTUALIZACIÓN</th>
                            <th>BIOGRAFIA</th>
                            <th>NICK USUARIO</th>
                            <th>CONTRASEÑA DE USUARIO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    {%  for usuario in user %}
                        <tbody>
                            <tr>
                                <td>{{ usuario.id }}</td>
                                <td>{{ usuario.nombreUsuario }}</td>
                                <td>{{ usuario.apellidoUsuario }}</td>
                                <td>{{ usuario.correoUsuario }}</td>
                                <td>
                                    {%  if usuario.tipoDeUsuario == 'ROLE_ADMIN' %}
                                        <strong style="color:red">ADMINISTRADOR</strong>
                                    {% elseif usuario.tipoDeUsuario == 'ROLE_USER' %}
                                        <strong style="color:blue">USUARIO</strong>
                                    {% endif %}
                                <td>
                                    {%  if usuario.nivelUsuario == 'Novato' %}
                                        <strong style="color:#62B0A7">Novato</strong>
                                    {% elseif usuario.nivelUsuario == 'Intermedio' %}
                                        <strong style="color:#84B062">Intermedio</strong>
                                        {% elseif usuario.nivelUsuario == 'Experto' %}
                                        <strong style="color:#B09562">Experto</strong>
                                    {% endif %}
                                <td>{{ usuario.pais }}</td>
                                <td>{{ usuario.fechaAlta | date('d-m-Y ') }}</td>
                                <td>{{ usuario.fechaActualizacion | date('d-m-Y') }}</td>
                                <td>{{ usuario.biografia }}</td>
                                <td>{{ usuario.nickUsuario }}</td>
                                <td>{{ usuario.passwdUsuario }}</td>
                                <td>

                                        <a href="#"><button class="btn btn-link">Vista de Usuario</button></a><br/>
                                        <a href="#"><button class="btn btn-link" style="color:green">Editar Usuario</button></a><br/>
                                        <a href="#"><button class="btn btn-link" style="color:red">Eliminar Usuario</button></a>

                                </td>
                            </tr>
                        </tbody>
                    {%  endfor %}
                </table>








            </section>

        <!--main content end-->
    </section>
    <!-- container section start -->

    <!-- javascripts -->

    <script>

        //knob
        $(function() {
            $(".knob").knob({
                'draw' : function () {
                    $(this.i).val(this.cv + '%')
                }
            })
        });

        //carousel
        $(document).ready(function() {
            $("#owl-slider").owlCarousel({
                navigation : true,
                slideSpeed : 300,
                paginationSpeed : 400,
                singleItem : true

            });
        });

        //custom select box

        $(function(){
            $('select.styled').customSelect();
        });

        /* ---------- Map ---------- */
        $(function(){
            $('#map').vectorMap({
                map: 'world_mill_en',
                series: {
                    regions: [{
                        values: gdpData,
                        scale: ['#000', '#000'],
                        normalizeFunction: 'polynomial'
                    }]
                },
                backgroundColor: '#eef3f7',
                onLabelShow: function(e, el, code){
                    el.html(el.html()+' (GDP - '+gdpData[code]+')');
                }
            });
        });

    </script>






{% endblock %}