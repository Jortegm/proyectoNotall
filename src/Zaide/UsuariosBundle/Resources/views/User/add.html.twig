{% extends '::plantillaAdminis.html.twig' %}

{% block body %}
    {{ parent() }}
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
                Nuevo Usuario
        </header>
              {{ form_start(form, { 'attr' : {'role' : 'form'} }) }}
        <div class="form-group">
            {{ form_label(form.nombre_usuario) }}
            {{ form_widget(form.nombre_usuario, {'attr' : {' class' : 'form-control', 'placerholder' : 'Nombre'} }) }}
            <span class="text-danger">{{ form_errors(form.nombre_usuario) }}</span>


            {{ form_end(form) }}

        </div>
    </section>
</div>
