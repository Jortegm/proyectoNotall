{% extends '::plantillaUser.html.twig' %}

{% block title %} Listado {{ app.user }} {% endblock %}

{% block content %}
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Lista de tus Partituras </h2>
                <h5>Aqu√≠ tienes el Listado de tus Partituras</h5>
                <div id = "volver" style ="float:right;margin-top:-5%;">
                    <a href="{{ path('Cuaderno') }}" class="btn btn-lg btn-danger"> Volver</a>
                </div>
            </div>

            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Tus Partituras
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">

                            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                <div class="row">
                                    <div class="col-sm-6">

                                        <div class="dataTables_length" id="dataTables-example_length">
                                            <label>
                                                  Total de Partituras: {{ pagination.getTotalItemCount }}
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                {%  for partitura in pagination %}

                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                    <thead>
                                        <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="Rendering engine: activate to sort column ascending" style="width: 177px;">Nombre de la Partitura</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="Rendering engine: activate to sort column ascending" style="width: 177px;">Subtitulo de la Partitura</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                        style="width: 273px;">Contenido Partitura</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                        style="width: 273px;">Ver Partitura</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                        style="width: 273px;">Compartir con la comunidad</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                        style="width: 273px;">Compartir con el mundo</th>
                                    </thead>
                                    <tbody>
                                        <tr class="gradeA odd">
                                            <td>{{ partitura.nombrePartitura }}</td>
                                            <td>{{ partitura.subnombrePartitura }}</td>
                                            <td>{{ partitura.contenidoPartitura }}</td>
                                            <td><a href="#">mostrar</a> </td>
                                            <td><input type="checkbox"/></td>
                                            <td><input type="checkbox"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            {% endfor %}


                                <div class="row">

                                    <div class="navigation" style="float: right">
                                        {{  knp_pagination_render (pagination) }}
                                    </div>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div>

            </div>

        </div>

{% endblock %}
{% block javascripts %}


    <script type="text/javascript" src="{{ asset('profile/js/js.js') }}"></script>


{% endblock %}
