                                    <div><label>NICK USUARIO</label><p>{{ usuario.nickUsuario }}</p><br/></div>

                                    <div><label>CONTRASEÑA DE USUARIO</label><p>{{  usuario.passwdUsuario }}</p><br/> </div>
                                </div>
                        </div>
                </div>
             </div>
        </div>

        <hr>

        {% endfor %}

        {%  for usuario in users %}
        <div class="panel-body" style="display: none;" id="modificar">
            <label>NOMBRE </label>
            <input class ="form-control" value="{{ usuario.nombreUsuario }}"/><br/>
            <label>APELLIDOS</label>
            <input class ="form-control" value="{{ usuario.apellidoUsuario }}"/><br/>
            <label>CORREO Electronico</label>
            <input class ="form-control" value="{{ usuario.correoUsuario }}"/><br/>
            <label>NIVEL</label>
            <input class ="form-control" value="{{ usuario.nivelUsuario }}"/><br/>
            <label>PAÍS</label>
            <input class ="form-control" value="{{ usuario.pais }}"/><br/>
            <label>BIOGRAFIA</label>
            <textarea class ="form-control"> {{ usuario.biografia }}"</textarea><br/>
            <label>NICK USUARIO</label>
            <input class ="form-control" value="{{ usuario.nickUsuario }}"/><br/>
            <label>CONTRASEÑA DE USUARIO</label>
            <input class ="form-control" value="{{ usuario.passwdUsuario }}"/><br/>
            <hr>
        </div>
        {% endfor %}
    </div>

{% endblock %}

