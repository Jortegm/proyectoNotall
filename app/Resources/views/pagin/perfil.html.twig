{% extends '::plantillaUser.html.twig' %}

{% block content %}

    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Perfil </h2>
                <div class="row">
                        <!-- Form Elements -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <p>Este es tu Espacio Personal</p>
                            </div>

                               {%  for usuario in users %}

                                <div class="panel-body" id="info">
                                    <div id="editar" style="float:right">
                                        <a href="#" class="fa fa-pencil" style="font-size: 35px"></a>
                                    </div>

                                    <div><label>NOMBRE </label><p >{{ usuario.nombreUsuario }}</p><br/></div>

                                    <div> <label>APELLIDOS</label><p>{{ usuario.apellidoUsuario }}</p><br/> </div>

                                    <div><label>CORREO Electronico</label><p>{{ usuario.correoUsuario }}</p><br/></div>

                                    <div><label>NIVEL</label><p>{{ usuario.nivelUsuario }}</p><br/></div>

                                    <div><label>PAÍS</label><p>{{ usuario.pais }}</p><br/></div>

                                    <div><label>BIOGRAFIA</label></div>

