{% extends '::plantilla.html.twig' %}


{% block content %}
     <body>
        <section class="main-section" id="service"><!--main-section-start-->
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="panel panel-login">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <h1>Login to Zaide</h1>
                                    </div>

                                    {% if error %}
                                        <div class="alert alert-danger col-md-6 col-md-offset-3">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </div>
                                    {% endif %}
                                </div>
                                <hr>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="login-form" action="{{ path('comprobar') }}" method="post" style="display: block;">
                                            <div class="form-group">
                                                <input type="text" name="_username" id="nickUsuario" tabindex="1" class="form-control" placeholder="Usuario" value="">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" name="_password" id="passwdUsuario" tabindex="2" class="form-control" placeholder="ContraseÃ±a">
                                            </div>
                                            <div class="form-group text-center">
                                                <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                                <label for="remember"> Recordar en este equipo</label>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-sm-6 col-sm-offset-3">
                                                        <input type="submit"  id="login-submit" tabindex="4" class="form-control btn btn-login" value="Entrar">
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    </body>



{% endblock %}

